<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hospitals.HospitalActivity" >

    <include
        android:id="@+id/hospital_bar"
        layout="@layout/hospital_bar">
    </include>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/TF_location"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/hospital_bar"
        android:ems="10"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:inputType="textPersonName"
        android:hint="Enter Hospital Name" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@id/TF_location"
        android:background="@drawable/background_button"
        android:textColor="@android:color/white"
        android:onClick="onClick"
        android:text="Search"
        android:textStyle="bold" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/B_search"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/B_hospitals"
        android:layout_width="110dp"
        android:layout_marginTop="10dp"
        android:layout_height="45sp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TF_location"
        android:background="@drawable/background_button"
        android:textColor="@android:color/white"
        android:onClick="onClick"
        android:text="Hospitals"
        android:textStyle="bold" />



</RelativeLayout>